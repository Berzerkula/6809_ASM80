; OMEN PIA test
; 6809 source (OMEN Kilo)

; It just set some bits up and some down

	    .INCLUDE pia.a09

            .ORG    $200 
            .ENT    $ 

            JMP     flip

; Set bit pattern
FLIP:
            LDA     #$AA
            STA     PORTA 
            STA     PORTB
            JSR     qtrscd
            JMP     flop

FLOP:
            LDA     #$55
            STA     PORTA 
            STA     PORTB
            JSR     qtrscd
            JMP     flip

QTRSCD:     LDA	#250		; 250 MILLISECONDS (FA HEX)
            JSR	DELAY
            DECB
            BNE	QTRSCD		; CONTINUE UNTIL DONE
            RTS

            .INCLUDE delay.a09

; and done
DONE:
            JMP     $E000 
